      tr
        td(align='center' style='background-color:#{back_color};' bgcolor='#{back_color}')
          div(style='max-width:#{mail_width}px;' class="sp-wrap")
            +mso_coment_start()
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#ffffff;' bgcolor="#ffffff")
              tr
                +Td_spacer(5)
                td(width='90%' align='left' valign="top")
                  div(style="display:block;")
                    //[if gte mso 9]><table width="100%" cellpadding="0" cellspacing="0"><tr><td width="33.3333333%" valign="top"><![endif]
                    div(style="float:left;width:33.3333333%;" class="col-box")
                      table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}padding: 0 10px 0 0;' class="col-box-inr")
                        tr
                          td(align='center')
                            a(href="#" target="_blank")
                              img(src="#{img_path}thum1.jpg" border='0' alt='' style='#{img_style}max-width:182px;' width='182')
                        tr
                          td
                            img(src='#{img_path}spacer.gif' border='0' alt='' style='#{spacer_style}' width='1' height='15')
