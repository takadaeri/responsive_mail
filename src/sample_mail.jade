        td(align='center' style='background-color:#{back_color};' bgcolor='#{back_color}')
          div(style='max-width:#{mail_width}px;' class="sp-wrap")
            +mso_coment_start()
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#0e9753;' bgcolor="#0e9753")
              tr
