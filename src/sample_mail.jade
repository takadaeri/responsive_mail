                      table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}padding: 0 5px;' class="col-box-inr")
                        tr
                          td(align='center')
                            a(href="#" target="_blank")
                              img(src="#{img_path}thum2.jpg" border='0' alt='' style='#{img_style}max-width:182px;' width='182')
                        tr
                          td
                            img(src='#{img_path}spacer.gif' border='0' alt='' style='#{spacer_style}' width='1' height='15')
                        tr
                          td(style='font-size:15px;mso-line-height-rule:exactly;line-height:22px;')
                            font(style="font-weight:bold;" color="#333333") ニューサマーオレンジプリン
                        tr
                          td
                            img(src='#{img_path}spacer.gif' border='0' alt='' style='#{spacer_style}' width='1' height='5')
                        tr
                          td(style='font-size:13px;mso-line-height-rule:exactly;line-height:20px;')
                            font(color="#333333") 爽やかな酸味とふわふわした食感の白皮
                    //[if gte mso 9]></td><td width="33.3333333%" valign="top"><![endif]
                    div(style="float:left;width:33.3333333%;" class="col-box col-box-mt")
                      table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}padding: 0 0 0 10px;' class="col-box-inr")
                        tr
                          td(align='center')
                            a(href="#" target="_blank")
                              img(src="#{img_path}thum3.jpg" border='0' alt='' style='#{img_style}max-width:182px;' width='182')
                        tr
                          td
                            img(src='#{img_path}spacer.gif' border='0' alt='' style='#{spacer_style}' width='1' height='15')
                        tr
                          td(style='font-size:15px;mso-line-height-rule:exactly;line-height:22px;')
                            font(style="font-weight:bold;" color="#333333") カラマンダリンのドライフルーツ
                        tr
                          td
                            img(src='#{img_path}spacer.gif' border='0' alt='' style='#{spacer_style}' width='1' height='5')
                        tr
                          td(style='font-size:13px;mso-line-height-rule:exactly;line-height:20px;')
                            font(color="#333333") 遅咲きのニューフェイス柑橘
                    //[if gte mso 9]></tr></table><![endif]
                +Td_spacer(5)
            +mso_coment_end()
    +SpacerWht(40)

    <!-- ++++++ block background ++++++ -->    
    +SpacerGray(20)

    <!-- ++++++ heading top & bottom border - center ++++++ -->    
    +SpacerGreen(20)
    table(cellpadding='0' cellspacing='0' width='100%' style='#{tble_style}')
      tr
        td(align='center' style='background-color:#{back_color};' bgcolor='#{back_color}')
          div(style='max-width:#{mail_width}px;' class="sp-wrap")
            +mso_coment_start()
