                +Td_spacer(5)
                td(width='90%')
                  table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}')
                    +Tr_spacer(3,12)
                    tr
                      td(width='100%' align='center' style='font-size:20px;mso-line-height-rule:exactly;line-height:24px;')
