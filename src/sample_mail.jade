    mixin mso_css()

  body(leftmargin="0" topmargin="0" marginwidth="0" marginheight="0" style="margin:0;padding:0;line-height:140%;color:#333333;background-color:#{back_color};")



    <!-- =============== header =============== -->
    table(cellpadding='0' cellspacing='0' width='100%' style='#{tble_style}')
      tr
        td(align='center' style='background-color:#{head_back_color};' bgcolor='#{head_back_color}')
          div(style='max-width:#{mail_width}px;')
            +mso_coment_start()
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#ffffff;' bgcolor='#ffffff')
