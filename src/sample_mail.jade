                      td(style="background:#ffffff;text-align:center;border-radius:5px;")
                        a(href="http://www.google.com" target="_blank" style="background: #ffffff; border: 2px solid #ffffff; padding: 13px 25px;  font-size: 18px; line-height: 20px; mso-line-height-rule:exactly; text-align: center; text-decoration: none; display: block; color:#0e9753;border-radius:5px;font-weight:bold;" class="mso-btn")
