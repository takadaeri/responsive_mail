                    font(color="#47a0cc") こちら
                +Td_spacer(5)
              +Tr_spacer(5,20)
            +mso_coment_end()


    <!-- ++++++ block background ++++++ -->    
    +SpacerGray(20)




    <!-- =============== content =============== -->


    <!-- ++++++ full column - main ++++++ --> 
    table(cellpadding='0' cellspacing='0' width='100%' style='#{tble_style}')
      tr
        td(align='center' style='background-color:#ffe902;' bgcolor='#ffe902')
          div(style='max-width:#{mail_width}px;' class="sp-wrap")
            +mso_coment_start()
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#ffe902;' bgcolor="#ffe902")
              tr
                td(width='100%' align='center')
                  a(href="#" target="_blank")
                    img(src="#{img_path}main.jpg" border='0' alt='' style='#{img_style}max-width:640px;' width='640')
            +mso_coment_end()


    <!-- ++++++ block background ++++++ -->    
    +SpacerGray(20)


    <!-- ++++++ heading sub & main title - center ++++++ -->    
    +SpacerWht(20)
