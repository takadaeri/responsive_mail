                    +Tr_spacer(3,1)
                +Td_spacer(5)
            +mso_coment_end()
    table(cellpadding='0' cellspacing='0' width='100%' style='#{tble_style}')
      tr
        td(align='center' style='background-color:#{back_color};' bgcolor='#{back_color}')
          div(style='max-width:#{mail_width}px;' class="sp-wrap")
            +mso_coment_start()
            table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#ffffff;' bgcolor="#ffffff")
