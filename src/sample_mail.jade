                      tr
                        td(width='100%' align='left')
                          a(href="http://www.google.com" target="_blank")
                            img(src="#{img_path}logo.jpg" border='0' alt='' style='#{img_style}max-width:140px;' width='140')
                    //[if gte mso 9]></td></tr></table><![endif]
