mixin mso_coment_end()
  //[if gte mso 9]></td></tr></table><![endif]




mixin SpacerGray(size)
  table(cellpadding='0' cellspacing='0' width='100%' style='#{tble_style}')
    tr
      td(align='center' style='background-color:#{back_color};' bgcolor='#{back_color}')
        div(style='max-width:#{mail_width}px;' class="sp-wrap")
          +mso_coment_start()
          table(cellpadding='0' cellspacing='0' width='100%' border='0' style='#{tble_style}background-color:#{back_color};' bgcolor="#{back_color}")
            tr
              td(align='center')
                img(src='#{img_path}spacer.gif' border='0' alt='' style='outline:none;text-decoration:none;display:block!important;border:none;' width='1' height='#{size}')  

